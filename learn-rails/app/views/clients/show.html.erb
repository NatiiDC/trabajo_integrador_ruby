<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">

					<div class="text-center" >
					  <h3><legend class="text-center"> Informaci&oacute;n de cliente </h3></legend>

						<%= render template: "notice" %>

					  <h5>
					    <strong>Nombre:</strong>
					    <%= @client.firstname %>
					  </h5>

					  <h5>
					    <strong>Apellido:</strong>
					    <%= @client.lastname %>
					  </h5>

					  <h5>
					    <strong>Fecha de nacimiento</strong>
					    <%= @client.born.strftime "%d-%m-%Y" %>
					  </h5>

					  <h5>
					    <strong>Tipo y n&uacute;mero de DNI:</strong>
					    <%= @client.type_document_cd.upcase %> <%= @client.number_document %>
					  </h5>

					  <h5>
					    <strong>N&uacute;mero de CUIL/CUIT:</strong>
					    <%= @client.code %>
					  </h5>
					</div>
        </div>
      </div>
      <div class="pull-left">
				<%= link_to 'Lista de clientes', clients_path, class: "btn btn-sm btn-default" %>
				<%= link_to 'Lista de facturas', "/clients/#{@client.id}/invoices", class: "btn btn-sm btn-default" %>
      </div>
      <div class="pull-right">
				<%= link_to 'Agregar factura', new_client_invoice_path(@client), class: "btn btn-sm btn-info"  %>
        <%= link_to 'Editar', edit_client_path(@client), class: "btn btn-sm btn-info"  %>
      </div>
    </div>
  </div>
</div>
