<div class="container-fluid">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="panel panel-default">
				<div class="panel-body">

					<%= form_for :client, role:"form",  url: clients_path do |f| %>
					  <fieldset>
					    <h3><legend class="text-center"> Nuevo Cliente </h3></legend>
					    <div class="form-group">
					        <%= f.label :nombre, class: "col-md-4 control-label"  %>
									<!-- <div class="col-md-7"> -->
					        <%= f.text_field :firstname, :required => true, class: "form-control"  %>
									<!-- </div> -->
					    </div>

					    <div class="form-group">
					      <%= f.label :apellido, class: "col-md-4 control-label" %>
								<!-- <div class="col-md-7"> -->
					      <%= f.text_field :lastname, :required => true, class: "form-control"  %>
								<!-- </div> -->
					    </div>

					    <div class="form-group">
					      <%= f.label :'Fecha de nacimiento', class: "col-md-4 control-label" %>
								<!-- <div class="col-md-7"> -->
					      <%= f.date_field :born, max: Date.today, min: Date.new(1900, 01, 01), :required => true, class: "form-control"  %>
								<!-- </div> -->
					    </div>

							<!-- ALGUNA FORMA MAS BONITA DE HACER EST0? -->
							<div class="form-group">
					      <%= f.label :"Tipo De Documento", class: "col-md-4 control-label" %><br><br>
									<%= f.select(:type_document_cd) do  %>
									  <% [['DNI', 'DNI'], ['CI', 'CI'], ['LD', 'LD']].each do |c| -%>
									    <%= content_tag(:option, c.first, value: c.last) %>
									  <% end %>
									<% end %>
					    </div>

					    <div class="form-group">
					      <%= f.label :Documento, class: "col-md-4 control-label" %>
								<!-- <div class="col-md-7"> -->
					      	<%= f.number_field :number_document, min: "800000", max: "99999999", :required => true, class: "form-control", placeholder: "12345678"  %>
					      	 <!-- <button type="button" class="btn btn-default btn-xs" data-toggle="tooltip" data-placement="right" title="El dni debe tener 7 u 8 dÃ­gitos, debiendo excluirse los puntos. Ejemplo: 12345678">?</button> -->
							<!--	</div> -->
					    </div>

							<div class="form-group">
					      <%= f.label :'Codigo de cliente', class: "col-md-4 control-label" %>
								<!-- <div class="col-md-7"> -->
					      <%= f.number_field :code, min:"000001", max:"999999", :required => true, class: "form-control"  %>
								<!-- </div> -->
					    </div>

					    <div class="form-group pull-right">
					        <%= link_to "Cancelar", clients_path, class:"btn btn-danger" %>
					        <%= f.submit class:"btn btn-primary", value: "Guardar"%>
					    </div>
					  </fieldset>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>
