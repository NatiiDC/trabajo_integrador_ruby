<aside class="sidebar col-sm-3">
  <ul>
    <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

        <div class="panel-heading" role="tab" id="headingList">
          <div class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseList" aria-expanded="false" aria-controls="collapseList">
              Listados
            </a>
          </div>
        </div>
        <div id="collapseList" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingList">
          <div class="panel-body">
            <ul class="nav nav-pills nav-stacked">
              <li><%= link_to 'Lista de clientes', clients_path %></li>
              <li><%= link_to 'Lista de personas', people_path %>
            </ul>
          </div>
        </div>

      <% if  ! @client.nil?  %>
      <% if  ! @client.id.nil? %>
      <div class="panel-heading" role="tab" id="headingOne">
        <div class="panel-title">
          <a role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseAlumnos" aria-expanded="false" aria-controls="collapseAlumnos">
            Datos copados
          </a>
        </div>
      </div>
      <div id="collapseAlumnos" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <ul class="nav nav-pills nav-stacked">
            <li><%= link_to 'Lista de facturas', client_invoices_path(@client) %></li>
            <li><%= link_to 'Facturas del año corriente', client_invoices_cont_per_month_path(@client) %></li>
            <li><%= link_to 'Monto total por año', client_invoices_amount_per_year_path(@client) %>
            <li><%= link_to 'Top 5 de personas', client_top_five_people_path(@client) %>
          </ul>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </ul>
</aside>
